# Secrets-Datei für ESPHome
# Kopiere diese Datei zu secrets.yaml und trage deine Werte ein
# secrets.yaml ist in .gitignore und wird nicht ins Repository committet

# WiFi-Konfiguration
wifi_ssid: "DEIN_WLAN_SSID"
wifi_password: "DEIN_WLAN_PASSWORT"

# MQTT-Broker Konfiguration
mqtt_broker: "192.168.1.100"  # IP-Adresse oder Hostname deines MQTT-Brokers
# Optional: MQTT-Authentifizierung (auskommentieren falls nicht benötigt)
# mqtt_username: "mqtt_user"
# mqtt_password: "mqtt_pass"

